<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:paddingHorizontal="@dimen/scrollView_padding_hor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_margin_top"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivTeamImage"
                style="@style/rankingDetailHeaderImage"
                android:contentDescription = "@string/driverContentDescription"
                android:layout_alignParentEnd="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/ivTeamImage"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/rankingDetailHeaderText"
                    android:accessibilityHeading="true"
                    tools:text="Scuderia Ferrari" />
                <TextView
                    android:id="@+id/tvTeamCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="Maranello, Italy" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">
            <ImageView
                android:id="@+id/ivWC"
                style="@style/rankingDetailImageWC"
                android:contentDescription = "@string/icon_wc"
                android:src="@drawable/cup"/>
            <TextView
                android:id="@+id/tvWC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivWC"
                style="@style/rankingDetailTextInfo.WC"
                tools:text="16"/>
            <TextView
                android:id="@+id/tvWCLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tvWC"
                android:layout_below="@+id/tvWC"
                android:textSize="@dimen/detail_textSizeWC"
                android:text="@string/world_championships_label"
                tools:text="World Championships"/>
            <ImageView
                android:id="@+id/ivWins"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/ivWC"
                android:layout_alignStart="@id/ivWC"
                android:layout_marginStart="10dp"
                android:src="@drawable/winner"
                android:contentDescription="@string/icon_wins"/>
            <TextView
                android:id="@+id/tvWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/ivWC"
                android:layout_toEndOf="@+id/ivWins"
                android:layout_marginStart="20dp"
                style="@style/rankingDetailTextInfo"
                tools:text="244"/>
            <TextView
                android:id="@+id/tvWinsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWins"
                android:layout_alignStart="@id/tvWins"
                android:layout_marginEnd="50dp"
                android:textSize="@dimen/min_text_size"
                android:text="@string/wins_label"
                tools:text="Wins"/>
            <LinearLayout
                android:id="@+id/podiumLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ivWC"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp">
                <ImageView
                    android:id="@+id/ivPodiums"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/driver"
                    android:contentDescription="@string/icon_podiums"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvPolePositions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/rankingDetailTextInfo"
                        android:layout_gravity="end"
                        tools:text="247"/>
                    <TextView
                        android:id="@+id/tvPolePositionsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Pole positions"
                        android:text="@string/pole_positions_label"
                        android:layout_gravity="end"
                        android:textSize="@dimen/min_text_size" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivFastestLap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/podiumLayout"
                android:layout_alignStart="@id/ivWC"
                android:layout_marginStart="10dp"
                android:src="@drawable/time"
                android:contentDescription="@string/icon_fast_lap"/>
            <TextView
                android:id="@+id/tvFastestLaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/podiumLayout"
                android:layout_alignStart="@id/tvWinsLabel"
                android:layout_marginTop="50dp"
                style="@style/rankingDetailTextInfo"
                tools:text="247"/>
            <TextView
                android:id="@+id/tvFastestLapsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFastestLaps"
                android:layout_alignStart="@id/tvWinsLabel"
                android:text="@string/fastest_laps_label"
                android:textSize="@dimen/min_text_size"
                tools:text="Fastest Laps"/>
            <LinearLayout
                android:id="@+id/firstSeasonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/podiumLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp">
                <TextView
                    android:id="@+id/tvFirstSeason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    style="@style/rankingDetailTextInfo"
                    tools:text="1950"/>
                <TextView
                    android:id="@+id/tvFirstSeasonLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_season_label"
                    android:textSize="11sp"
                    tools:text="First Season"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>