<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:paddingHorizontal="@dimen/scrollView_padding_hor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:maxLines="2"
                android:layout_toStartOf="@id/ivTeamImage"
                android:layout_alignParentStart="true"
                tools:text="Scuderia Ferrari"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:id="@+id/tvTeamCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTeamName"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_toStartOf="@id/ivTeamImage"
                android:layout_alignParentStart="true"
                tools:text="Maranello, Italy"/>
            <ImageView
                android:id="@+id/ivTeamImage"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/driverContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvWCLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world_championships_label"
                tools:text="World Championships"/>
            <TextView
                android:id="@+id/tvWC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWCLabel"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="2"/>
            <TextView
                android:id="@+id/tvFirstSeasonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="First Season"
                android:text="@string/first_season_label"
                android:layout_below="@+id/tvWC"/>
            <TextView
                android:id="@+id/tvFirstSeason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFirstSeasonLabel"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="1950"/>
            <TextView
                android:id="@+id/tvWinsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWC"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/wins_label"
                tools:text="Wins"/>
            <TextView
                android:id="@+id/tvWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWinsLabel"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="244"/>
            <TextView
                android:id="@+id/tvPolePositionsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFirstSeason"
                android:layout_marginTop="30dp"
                android:text="@string/pole_positions_label"
                tools:text="Pole Positions"/>
            <TextView
                android:id="@+id/tvPolePositions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPolePositionsLabel"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="247"/>
            <TextView
                android:id="@+id/tvFastestLapsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWins"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="30dp"
                android:text="@string/fastest_laps_label"
                tools:text="Fastest Laps"/>
            <TextView
                android:id="@+id/tvFastestLaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFastestLapsLabel"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="259"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>