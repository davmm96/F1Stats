<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:paddingHorizontal="@dimen/scrollView_padding_hor">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameRace"
                android:layout_marginTop="@dimen/text_title_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Singapore Grand Prix"
                android:theme="@style/titleText.black"
                android:layout_marginBottom="@dimen/text_title_margin_bottom"/>
            <TextView
                android:id="@+id/locationRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text= "Singapour, Singapore"
                android:theme="@style/subtitleText"
                android:layout_marginBottom="@dimen/subtitle_text_margin_bottom"/>
            <TextView
                android:id="@+id/circuitRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Marina Bay Street Circuit"
                android:layout_marginBottom="@dimen/description_margin_bottom"/>
            <TextView
                android:id="@+id/lapsRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text= "70 laps"
                android:layout_marginBottom="@dimen/block_margin_bottom"/>
            <TextView
                android:id="@+id/raceWeekend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="RACE WEEKEND"
                android:theme="@style/raceWeekend"
                android:text= "@string/race_weekend"
                android:layout_marginBottom="@dimen/text_weekend_margin_bottom"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRaceWeekend"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginVertical="@dimen/cardViewDetailRace_margin_v"
                android:layout_marginStart="@dimen/cardViewDetailRace_margin_l"
                android:layout_marginEnd="@dimen/cardViewDetailRace_margin_r">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/cardView_padding">
                    <LinearLayout
                        android:id="@+id/raceDetail_date_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/raceDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText"
                            tools:text="20"/>
                        <TextView
                            android:id="@+id/raceMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText.bold"
                            tools:text="Oct"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/raceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardView_title_margin_start"
                        android:layout_toEndOf="@id/raceDetail_date_linear"
                        android:theme="@style/cardViewTitle"
                        android:text="@string/race"
                        tools:text="Race"/>
                    <TextView
                        android:id="@+id/raceHour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/cardViewText"
                        android:layout_below="@id/raceText"
                        android:layout_alignStart="@id/raceText"
                        tools:text="14:00"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvSprint"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/cardViewDetailRace_margin_v"
                android:layout_marginStart="@dimen/cardViewDetailRace_margin_l"
                android:layout_marginEnd="@dimen/cardViewDetailRace_margin_r">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/cardView_padding">
                    <LinearLayout
                        android:id="@+id/sprintDetail_date_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/sprintDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText"
                            tools:text="20"/>
                        <TextView
                            android:id="@+id/sprintMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText.bold"
                            tools:text="Oct"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sprintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardView_title_margin_start"
                        android:layout_toEndOf="@id/sprintDetail_date_linear"
                        android:theme="@style/cardViewTitle"
                        android:text="@string/sprint"
                        tools:text="Sprint"/>
                    <TextView
                        android:id="@+id/sprintHour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_below="@id/sprintText"
                        android:layout_alignStart="@id/sprintText"
                        tools:text="14:00"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvSprintShootout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/cardViewDetailRace_margin_v"
                android:layout_marginStart="@dimen/cardViewDetailRace_margin_l"
                android:layout_marginEnd="@dimen/cardViewDetailRace_margin_r">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/cardView_padding">
                    <LinearLayout
                        android:id="@+id/sprintShootoutDetail_date_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/sprintShootoutDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText"
                            tools:text="20"/>
                        <TextView
                            android:id="@+id/sprintShootoutMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText.bold"
                            tools:text="Oct"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sprintShootoutText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardView_title_margin_start"
                        android:layout_toEndOf="@id/sprintShootoutDetail_date_linear"
                        android:theme="@style/cardViewTitle"
                        android:text="@string/sprint_shootout"
                        tools:text="Sprint Shootout"/>
                    <TextView
                        android:id="@+id/sprintShootoutHour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_below="@id/sprintShootoutText"
                        android:layout_alignStart="@id/sprintShootoutText"
                        tools:text="14:00"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvQualy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/cardViewDetailRace_margin_v"
                android:layout_marginStart="@dimen/cardViewDetailRace_margin_l"
                android:layout_marginEnd="@dimen/cardViewDetailRace_margin_r">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/cardView_padding">
                    <LinearLayout
                        android:id="@+id/qualyDetail_date_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/qualyDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText"
                            tools:text="20"/>
                        <TextView
                            android:id="@+id/qualyMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText.bold"
                            tools:text="Oct"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/qualyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardView_title_margin_start"
                        android:layout_toEndOf="@id/qualyDetail_date_linear"
                        android:theme="@style/cardViewTitle"
                        android:text="@string/qualy"
                        tools:text="Qualifying"/>
                    <TextView
                        android:id="@+id/qualyHour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_below="@id/qualyText"
                        android:layout_alignStart="@id/qualyText"
                        tools:text="14:00"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvP3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/cardViewDetailRace_margin_v"
                android:layout_marginStart="@dimen/cardViewDetailRace_margin_l"
                android:layout_marginEnd="@dimen/cardViewDetailRace_margin_r">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/cardView_padding">
                    <LinearLayout
                        android:id="@+id/p3_date_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/p3Day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText"
                            tools:text="20"/>
                        <TextView
                            android:id="@+id/p3Month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText.bold"
                            tools:text="Oct"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/p3Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardView_title_margin_start"
                        android:layout_toEndOf="@id/p3_date_linear"
                        android:theme="@style/cardViewTitle"
                        android:text="@string/p3"
                        tools:text="Practice 3"/>
                    <TextView
                        android:id="@+id/p3Hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_below="@id/p3Text"
                        android:layout_alignStart="@id/p3Text"
                        tools:text="14:00"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvP2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/cardViewDetailRace_margin_v"
                android:layout_marginStart="@dimen/cardViewDetailRace_margin_l"
                android:layout_marginEnd="@dimen/cardViewDetailRace_margin_r">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/cardView_padding">
                    <LinearLayout
                        android:id="@+id/p2_date_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/p2Day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText"
                            tools:text="20"/>
                        <TextView
                            android:id="@+id/p2Month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText.bold"
                            tools:text="Oct"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/p2Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardView_title_margin_start"
                        android:layout_toEndOf="@id/p2_date_linear"
                        android:theme="@style/cardViewTitle"
                        android:text="@string/p2"
                        tools:text="Practice 2"/>
                    <TextView
                        android:id="@+id/p2Hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_below="@id/p2Text"
                        android:layout_alignStart="@id/p2Text"
                        tools:text="14:00"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvP1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/cardViewDetailRace_margin_v"
                android:layout_marginStart="@dimen/cardViewDetailRace_margin_l"
                android:layout_marginEnd="@dimen/cardViewDetailRace_margin_r">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/cardView_padding">
                    <LinearLayout
                        android:id="@+id/p1_date_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/p1Day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText"
                            tools:text="20"/>
                        <TextView
                            android:id="@+id/p1Month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/cardViewText.bold"
                            tools:text="Oct"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/p1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardView_title_margin_start"
                        android:layout_toEndOf="@id/p1_date_linear"
                        android:theme="@style/cardViewTitle"
                        android:text="@string/p1"
                        tools:text="Practice 1"/>
                    <TextView
                        android:id="@+id/p1Hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_below="@id/p1Text"
                        android:layout_alignStart="@id/p1Text"
                        tools:text="14:00"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:indeterminateTint="@color/dark_red"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>