<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/cardView"
    android:layout_marginBottom="@dimen/cardView_margin_bottom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/cardView_padding">
        <LinearLayout
            android:id="@+id/race_date_linear"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/race_date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/cardViewText"
                android:layout_gravity="center_horizontal"
                tools:text="20-22"/>
            <TextView
                android:id="@+id/race_date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:theme="@style/cardViewText.bold"
                tools:text="Oct"/>
        </LinearLayout>
        <TextView
            android:id="@+id/race_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardView_info_margin_bottom"
            android:layout_marginStart="@dimen/cardView_title_margin_start"
            android:layout_toEndOf="@id/race_date_linear"
            android:theme="@style/cardViewTitle"
            tools:text="Abu Dhabi"
            tools:ignore="RelativeOverlap" />
        <TextView
            android:id="@+id/race_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/race_country"
            android:layout_alignStart="@id/race_country"
            android:layout_marginBottom="@dimen/cardView_info_margin_bottom"
            android:theme="@style/cardViewText"
            tools:text="Abu Dhabi Grand Prix"/>
        <TextView
            android:id="@+id/race_laps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/race_name"
            android:layout_alignStart="@id/race_country"
            android:theme="@style/cardViewText"
            tools:text="70 laps"/>
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="@dimen/cardView_arrow"
            android:layout_height="@dimen/cardView_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_favorites"
            android:contentDescription="@string/add_to_favorite_list" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>