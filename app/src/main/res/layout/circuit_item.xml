<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/cardView"
    android:layout_marginBottom="@dimen/cardView_margin_bottom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/cardView_padding">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardView_info_margin_bottom"
            android:layout_marginStart="@dimen/cardView_title_margin_start"
            android:theme="@style/cardViewTitle"
            tools:text="Albert Park"
            tools:ignore="RelativeOverlap" />
        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_alignStart="@id/tvName"
            android:layout_marginBottom="@dimen/cardView_info_margin_bottom"
            android:theme="@style/cardViewText"
            tools:text="Australia"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>